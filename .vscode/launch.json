{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo con la gramatica
            "grammar": "src/main/java/com/example/C.g4",
            // Archivo a parsear
            "input": "input/example1.txt",
            // Simbolo inicial
            "startRule": "prog",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "src/main/java/com/example/CParserTest.java"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "compiladores.App",
            "projectName": "proyectobase"
        }
    ]
}